extends layouts/layout

block content

  div#success-info.alert.alert-info(style="display: none;")
  form.form-horizontal(method='POST', action='/' id="form-reset")
    //!= captcha
    .form-group.frm
      .col-sm-6.col-sm-offset-3.col-xs-12
        span#helpBlock.help-block #{i18n.t("information")}
    .form-group.frm
      label(for="login" class="col-sm-1 col-sm-offset-2 col-xs-12 control-label") #{i18n.t("login")}
      .col-sm-6.col-xs-12
        input.form-control(type="text" id="login" name="login" placeholder=i18n.t("login"))
        p(class="visible-xs-block")
      button(type="submit" id="addFilmBtn" class="frm-ctrl btn btn-default col-sm-2 col-xs-offset-1 col-sm-offset-0 col-xs-10 ") #{i18n.t("btn_reset")}
    .form-group
      .col-sm-6.col-sm-offset-3.col-xs-12
        span#resultBlock
    .form-group.frm
      .col-sm-10.col-sm-offset-3.col-xs-12
        != captcha
